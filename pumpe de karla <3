<body>
  <header>
    <h1>¿Vas a ir al cumple de Karla?</h1>
  </header>
  <main>
    <p>Contador de asistentes:</p>
    <div id="counter">0</div>
    <button id="joinButton">¡Voy a ir!</button>
  </main>

  <!-- Importamos Firebase (versión compat para simplicidad) -->
  <!-- Firebase App (core) -->
  <script src="https://www.gstatic.com/firebasejs/9.17.1/firebase-app-compat.js"></script>
  <!-- Firestore -->
  <script src="https://www.gstatic.com/firebasejs/9.17.1/firebase-firestore-compat.js"></script>

  <script>
    // Configuración de Firebase: reemplaza estos datos con los de tu proyecto.
    var firebaseConfig = {
      apiKey: "TU_API_KEY",
      authDomain: "TU_PROYECTO.firebaseapp.com",
      projectId: "TU_PROYECTO",
      storageBucket: "TU_PROYECTO.appspot.com",
      messagingSenderId: "TU_MENSAJERÍA",
      appId: "TU_APP_ID"
    };

    // Inicializa Firebase
    firebase.initializeApp(firebaseConfig);
    var db = firebase.firestore();

    // Referencia del documento donde se almacenará el contador.
    var docRef = db.collection("assistances").doc("karlaBirthday");

    // Función para actualizar la visualización del contador.
    function updateCounterDisplay(count) {
      document.getElementById('counter').innerText = count;
    }

    // Obtenemos el valor inicial del contador desde Firestore.
    docRef.get().then((doc) => {
      if (doc.exists) {
        var currentCount = doc.data().count;
        updateCounterDisplay(currentCount);
      } else {
        // Si el documento no existe, lo creamos e inicializamos el contador en 0.
        docRef.set({ count: 0 });
      }
    }).catch((error) => {
      console.error("Error al obtener el documento: ", error);
    });

    // Al hacer clic en el botón, se actualiza el contador.
    document.getElementById('joinButton').addEventListener('click', () => {
      // Usamos una transacción para evitar condiciones de carrera.
      db.runTransaction((transaction) => {
        return transaction.get(docRef).then((doc) => {
          if (!doc.exists) {
            throw "El documento no existe!";
          }
          var newCount = doc.data().count + 1;
          transaction.update(docRef, { count: newCount });
          return newCount;
        });
      }).then((newCount) => {
        updateCounterDisplay(newCount);
      }).catch((error) => {
        console.error("Error al actualizar el contador: ", error);
      });
    });
  </script>
</body>
</html>
